# ============= APPLICATION =============
# Use the Public IP of your OCI Instance or your Domain Name
# Do NOT use localhost
NEXT_PUBLIC_APP_NAME=Bloodchain
NEXT_PUBLIC_APP_URL=http://<YOUR_OCI_PUBLIC_IP>
NEXT_PUBLIC_API_URL=http://<YOUR_OCI_PUBLIC_IP>/api
NEXT_PUBLIC_SOCKET_URL=http://<YOUR_OCI_PUBLIC_IP>/socket.io
NODE_ENV=production

# ============= DATABASE =============
# This connects to the 'postgresql' service defined in docker-compose
# If using OCI Managed DB, replace this with the OCI connection string
DATABASE_URL=postgresql://bloodchain:secure_password_here@bloodchain-db:5432/bloodchain

# ============= AUTHENTICATION =============
# Generate a new secret: openssl rand -base64 32
NEXTAUTH_SECRET=REPLACE_WITH_SECURE_GENERATED_SECRET
NEXTAUTH_URL=http://<YOUR_OCI_PUBLIC_IP>

JWT_SECRET=REPLACE_WITH_SECURE_JWT_SECRET
JWT_EXPIRY=7d

# ============= OAUTH PROVIDERS =============
# You must update Google Cloud Console Authorized Origins with your OCI IP
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret

# ============= REDIS =============
# Connects to the 'redis' service in docker-compose
REDIS_URL=redis://bloodchain-redis:6379
REDIS_HOST=bloodchain-redis
REDIS_PORT=6379

# ============= BLOCKCHAIN =============
# Use a real RPC URL (Infura, Alchemy, or OCI Blockchain)
ETHEREUM_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_API_KEY
BLOCKCHAIN_SIGNER_PRIVATE_KEY=your_production_wallet_private_key
# Deployed Contract Addresses
SMART_CONTRACT_ADDRESS=0x...
REWARD_TOKEN_ADDRESS=0x...
CHAIN_ID=137

# ============= ML/AI =============
# This path matches the volume mount in docker-compose
TF_MODEL_PATH=/app/ml-models/trained/model.json
ENABLE_AI_MATCHING=true

# ============= LOGGING =============
LOG_LEVEL=info
LOG_DIR=/app/logs
LOG_TO_FILE=true